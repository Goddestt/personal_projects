<div class="login-form container">
  <h2>Log in</h2>
  <%= form_for(:session, url: login_path) do |f| %>
    <div class="mb-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'login-input'%>
    </div>
    <div class="mb-3">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password', class: 'login-input' %>
    </div>
    <div class="check-field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    <div class="check-field">
      <%= f.check_box :is_staff %>
      <%= f.label :are_you_a_staff %>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
  <% end %>
</div>