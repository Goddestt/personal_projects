<div class="container">


<%= form_with(model: @book, :url => user_books_url) do |f| %>
<div class="card">
  <div class="card-body">

    <div class="mb-3">
      <%= f.label :name, { class: "form-label"} %>
      <%= f.text_field :name, { class: "form-control", placeholder: "Book Name" } %>
    </div>

    <div class="mb-3">
      <p>If input is under 40, the price will automatically be 40 </p>
      <%= f.label :price, { class: "form-label"} %>
      <%= f.number_field :price, { class: "form-control", placeholder: "Price" } %>
    </div>

    <div class="mb-3">
      <%= f.label :barcode, { class: "form-label"} %>
      <%= f.text_field :barcode, { class: "form-control", placeholder: "Barcode" } %>
    </div>

    <div class="mb-3">
      <%= f.label :cover_image, { class: "form-label"} %>
      <%= f.file_field :cover_image, { class: "form-control", placeholder: "Image for Book cover" } %>
    </div>

    <%= f.submit "Submit", class: "btn btn-primary" %>

  </div>
</div>
<% end %>
</div>
