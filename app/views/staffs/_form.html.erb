<%= bootstrap_form_with(model: staff) do |form| %>
  <% if staff.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(staff.errors.count, "error") %> prohibited this staff from being saved:</h2>

      <ul>
        <% staff.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.text_field :password %>
  </div>
  <%= form.label :address %>
  <%= form.fields_for :address do |ff| %>
      <%= ff.text_field :detail %>
      <%= ff.text_field :street %>
      <%= ff.text_field :district %>
      <%= ff.text_field :city %>
  <% end %>

  <%= form.select(:role, options_for_select(["admin", "librarian", "cleaner"], staff.role), :prompt => 'Select') %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
