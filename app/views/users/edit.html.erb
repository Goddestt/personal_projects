<span><%= auto_discovery_link_tag(:rss, {controller: "users", action: "index"}) %></span>
<div class="container">
  <%= image_tag(@user.avatar , width: "20%") if !@user.avatar.blank? %>
  <%= bootstrap_form_for(@user) do |form| %>
    <div class="input-group mb-3">
      <%= form.text_field :name %>
    </div>
    <div class="input-group mb-3">
      <%= form.text_field :phone_number %>
    </div>
    <%= form.file_field :images %>
    <%= form.file_field :avatar %>
    <% @user.images.each do |image, index| %>
      <p> picture <%= index %> : </p>
      <%= image_tag(image) %>
    <% end %>
    <div class="input-group mb-3">
      <%= form.submit %>
    </div>
  <% end %>
</div>
